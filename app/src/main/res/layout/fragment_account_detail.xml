<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/image_account_avatar"
        android:layout_width="@dimen/account_avatar_size"
        android:layout_height="@dimen/account_avatar_size"
        android:layout_gravity="center"
        app:srcCompat="@drawable/avatar_default"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/account_padding_left"
        android:paddingTop="@dimen/account_padding_top">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_magin_top"
            android:text="@string/account_text_your_profile"
            android:textSize="@dimen/account_text_your_profile_size"/>

        <TextView
            android:id="@+id/text_account_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_magin_top"/>

        <TextView
            android:id="@+id/text_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_magin_top"/>

        <TextView
            android:id="@+id/text_account_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_magin_top"/>

        <TextView
            android:id="@+id/text_account_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_magin_top"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_magin_top"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/image_button_account_favorite"
                android:layout_width="@dimen/account_image_size"
                android:layout_height="@dimen/account_image_size"
                app:srcCompat="@drawable/ic_favorite"/>

            <ImageButton
                android:id="@+id/image_button_account_watchlist"
                android:layout_width="@dimen/account_image_size"
                android:layout_height="@dimen/account_image_size"
                app:srcCompat="@drawable/ic_watchlist"/>

            <ImageButton
                android:id="@+id/image_button_account_rated"
                android:layout_width="@dimen/account_image_size"
                android:layout_height="@dimen/account_image_size"
                app:srcCompat="@drawable/ic_rated"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>