<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_movie_detail"
        android:orientation="vertical"
        android:padding="@dimen/padding_linear_row_movie_list">


        <ImageView
            android:id="@+id/image_poster_movie_detail"
            android:layout_width="@dimen/image_poster_width"
            android:layout_height="@dimen/image_poster_height"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/text_magin_top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_name_of_movie_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_movie_detail_name"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_release_date_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_magin_top"/>

            <TextView
                android:id="@+id/text_runtime_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_magin_top"/>

            <TextView
                android:id="@+id/text_populary_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_magin_top"/>

            <TextView
                android:id="@+id/text_vote_count_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_magin_top"/>

            <TextView
                android:id="@+id/text_vote_average_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_magin_top"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_magin_top"
                android:text="@string/text_overview_detail"/>

            <TextView
                android:id="@+id/text_overview_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>